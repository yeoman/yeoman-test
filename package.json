{
  "name": "yeoman-test",
  "version": "8.3.0",
  "description": "Test utilities for Yeoman generators",
  "keywords": [
    "yeoman",
    "unit test"
  ],
  "homepage": "http://yeoman.io/authoring/testing.html",
  "repository": "yeoman/yeoman-test",
  "license": "MIT",
  "author": "The Yeoman Team",
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "tsc",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "doc": "npm run doc:generate && npm run doc:fix && npm run doc:prettier",
    "doc:fix": "sed -i -e 's:^[[:space:]]*<!--[[:space:]]*$::g' -e 's:^[[:space:]]*-->[[:space:]]*$::g' $npm_package_config_doc_path/global.html",
    "doc:generate": "jsdoc -c jsdoc.json -d $npm_package_config_doc_path",
    "doc:prettier": "prettier $npm_package_config_doc_path --write --ignore-path .prettierignore-doc",
    "fix": "prettier . --write && eslint . --fix",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "pretest": "eslint .",
    "test": "c8 esmocha --forbid-only"
  },
  "config": {
    "doc_path": "../yeoman-test-doc"
  },
  "dependencies": {
    "@yeoman/adapter": "^1.5.0",
    "inquirer": "^9.2.2",
    "lodash-es": "^4.17.21",
    "mem-fs-editor": "^11.1.1",
    "sinon": "^18.0.0",
    "temp-dir": "^3.0.0",
    "type-fest": "^4.3.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/lodash": "^4.14.195",
    "@types/node": "^18.19.46",
    "@types/sinon": "^17.0.3",
    "@yeoman/eslint": "0.1.2",
    "c8": "^10.1.2",
    "coveralls": "^3.1.1",
    "esmocha": "^1.0.1",
    "husky": "^8.0.2",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.3.0",
    "tui-jsdoc-template": "^1.2.2",
    "typescript": "~5.2.2",
    "yeoman-environment": "^3.18.3",
    "yeoman-generator": "^5.9.0"
  },
  "peerDependencies": {
    "@yeoman/types": "^1.3.0",
    "mem-fs": "^3.0.0 || ^4.1.0",
    "yeoman-environment": "^3.18.3 || >=4.0.0",
    "yeoman-generator": "^5.9.0 || >=6.0.0"
  },
  "peerDependenciesMeta": {
    "yeoman-environment": {
      "optional": true
    },
    "yeoman-generator": {
      "optional": true
    }
  },
  "engines": {
    "node": "^18.19.0 || >= 20.6.1"
  }
}
