{
  "name": "yeoman-test",
  "version": "10.0.1",
  "description": "Test utilities for Yeoman generators",
  "keywords": [
    "yeoman",
    "unit test"
  ],
  "homepage": "http://yeoman.io/authoring/testing.html",
  "repository": "yeoman/yeoman-test",
  "license": "MIT",
  "author": "The Yeoman Team",
  "type": "module",
  "exports": {
    "./mocha-cleanup": {
      "import": "./dist/mocha-cleanup.hooks.js"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "tsc",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "doc": "npm run doc:generate && npm run doc:fix && npm run doc:prettier",
    "doc:fix": "sed -i -e 's:^[[:space:]]*<!--[[:space:]]*$::g' -e 's:^[[:space:]]*-->[[:space:]]*$::g' $npm_package_config_doc_path/global.html",
    "doc:generate": "jsdoc -c jsdoc.json -d $npm_package_config_doc_path",
    "doc:prettier": "prettier $npm_package_config_doc_path --write --ignore-path .prettierignore-doc",
    "fix": "prettier . --write && eslint . --fix",
    "precommit": "lint-staged",
    "prepare": "npm run build && husky",
    "pretest": "eslint .",
    "test": "vitest run --coverage"
  },
  "config": {
    "doc_path": "../yeoman-test-doc"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "mem-fs-editor": "^11.1.1",
    "signal-exit": "^4.1.0",
    "temp-dir": "^3.0.0",
    "type-fest": "^4.25.0"
  },
  "devDependencies": {
    "@yeoman/adapter": "^2.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": ">=18.19.46",
    "@vitest/coverage-v8": "^3.0.2",
    "@yeoman/eslint": "0.2.0",
    "coveralls": "^3.1.1",
    "husky": "^9.1.5",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.3.0",
    "tui-jsdoc-template": "^1.2.2",
    "typescript": "^5.5.4",
    "vitest": "^3.0.2",
    "yeoman-environment": "^4.4.1",
    "yeoman-generator": "^7.3.2"
  },
  "peerDependencies": {
    "@yeoman/adapter": "^1.6.0 || ^2.0.0",
    "@yeoman/types": "^1.5.0",
    "mem-fs": "^4.1.0",
    "yeoman-environment": "^4.0.0",
    "yeoman-generator": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "yeoman-environment": {
      "optional": true
    },
    "yeoman-generator": {
      "optional": true
    }
  },
  "engines": {
    "node": "^18.19.0 || >= 20.6.1"
  }
}
