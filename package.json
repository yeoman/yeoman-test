{
  "name": "yeoman-test",
  "version": "7.4.0",
  "description": "Test utilities for Yeoman generators",
  "homepage": "http://yeoman.io/authoring/testing.html",
  "author": "The Yeoman Team",
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js"
  },
  "keywords": [
    "yeoman",
    "unit test"
  ],
  "repository": "yeoman/yeoman-test",
  "license": "MIT",
  "engines": {
    "node": "^14.15.0 || ^16.13.0 || >=18.12.0"
  },
  "config": {
    "doc_path": "../yeoman-test-doc"
  },
  "devDependencies": {
    "@node-loaders/esbuild": "^0.8.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^16.18.19",
    "@types/sinon": "^10.0.13",
    "coveralls": "^3.1.1",
    "husky": "^8.0.2",
    "jsdoc": "^3.6.10",
    "lint-staged": "^13.0.3",
    "mocha": "^10.1.0",
    "mocha-expect-snapshot": "^7.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-packagejson": "^2.3.0",
    "tui-jsdoc-template": "^1.2.2",
    "typescript": "^4.9.3",
    "xo": "^0.53.1",
    "yeoman-environment": "^3.13.0",
    "yeoman-generator": "^5.7.0"
  },
  "dependencies": {
    "@types/inquirer": "^8.2.5",
    "@types/yeoman-environment": "^2.10.8",
    "@types/yeoman-generator": "^5.2.11",
    "inquirer": "^8.2.5",
    "lodash": "^4.17.21",
    "mem-fs": "^3.0.0",
    "mem-fs-editor": "^10.0.1",
    "sinon": "^14.0.2",
    "temp-dir": "^3.0.0"
  },
  "peerDependencies": {
    "yeoman-environment": "^3.13.0",
    "yeoman-generator": "*"
  },
  "scripts": {
    "test": "mocha",
    "build": "tsc",
    "prepare": "npm run build",
    "pretest": "xo",
    "precommit": "lint-staged",
    "doc": "npm run doc:generate && npm run doc:fix && npm run doc:prettier",
    "doc:generate": "jsdoc -c jsdoc.json -d $npm_package_config_doc_path",
    "doc:prettier": "prettier $npm_package_config_doc_path --write --ignore-path .prettierignore-doc",
    "doc:fix": "sed -i -e 's:^[[:space:]]*<!--[[:space:]]*$::g' -e 's:^[[:space:]]*-->[[:space:]]*$::g' $npm_package_config_doc_path/global.html",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretest"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  }
}
