{
  "name": "yeoman-test",
  "version": "3.0.0",
  "description": "Test utilities for Yeoman generators",
  "homepage": "http://yeoman.io/authoring/testing.html",
  "author": "The Yeoman Team",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "keywords": [
    "yeoman",
    "unit test"
  ],
  "repository": "yeoman/yeoman-test",
  "license": "MIT",
  "engines": {
    "node": ">=12.10.0"
  },
  "devDependencies": {
    "coveralls": "^3.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mem-fs": "^1.2.0",
    "mem-fs-editor": "^7.0.1",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "xo": "^0.33.1"
  },
  "dependencies": {
    "inquirer": "^7.3.3",
    "lodash": "^4.17.19",
    "sinon": "^9.0.2",
    "yeoman-environment": "^2.10.3",
    "yeoman-generator": "^4.11.0"
  },
  "scripts": {
    "test": "mocha",
    "pretest": "xo",
    "precommit": "lint-staged",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretest"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  }
}
